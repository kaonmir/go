{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": [
    "src",
    ".backup/user",
    ".backup/auth",
    ".backup/auth.middleware.ts"
  ]
}
